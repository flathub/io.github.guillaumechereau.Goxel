{
  "id": "io.github.guillaumechereau.Goxel",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "goxel",
  "rename-desktop-file": "goxel.desktop",
  "rename-icon": "goxel",
  "finish-args": [
    "--socket=wayland",
    "--socket=x11",
    "--share=ipc",
    "--device=dri",
    "--filesystem=host"
  ],
  "cleanup": [ "/lib/cmake" ],
  "modules": [
    {
      "name": "scons",
      "cleanup": [ "*" ],
      "buildsystem": "simple",
      "build-commands": [
        "python3 setup.py install --prefix=/app",
        "sed -i '1 s/python/python3/' /app/bin/scons"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://prdownloads.sourceforge.net/scons/scons-3.1.2.tar.gz",
          "sha256": "7801f3f62f654528e272df780be10c0e9337e897650b62ddcee9f39fde13f8fb"
        }
      ]
    },
    {
        "name": "glfw",
        "buildsystem": "cmake-ninja",
        "builddir": true,
        "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
            "-DBUILD_SHARED_LIBS:BOOL=ON"
        ],
        "sources": [
            {
                "type": "archive",
                "url": "https://github.com/glfw/glfw/releases/download/3.3.2/glfw-3.3.2.zip",
                "sha256": "08a33a512f29d7dbf78eab39bd7858576adcc95228c9efe8e4bc5f0f3261efc7"
            }
        ],
        "cleanup": [
            "/include",
            "/lib/pkgconfig"
        ]
    },
    {
      "name": "goxel",
      "no-autogen": true,
      "make-args": ["release"],
      "make-install-args": ["PREFIX=/app"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/guillaumechereau/goxel/archive/v0.10.6.tar.gz",
          "sha256": "af57197910788131441a537cc658a3397448d90552a0fd3bfe9992635e9d64d8"
        },
        {
          "type": "file",
          "path": "io.github.guillaumechereau.Goxel.appdata.xml",
          "dest-filename": "snap/gui/io.github.guillaumechereau.Goxel.appdata.xml"
        }
      ]
    }
  ]
}

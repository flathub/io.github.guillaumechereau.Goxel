{
  "id": "io.github.guillaumechereau.Goxel",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "20.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "goxel",
  "rename-icon": "goxel",
  "rename-desktop-file": "goxel.desktop",
  "finish-args": [
    "--socket=wayland",
    "--socket=x11",
    "--share=ipc",
    "--device=dri",
    "--filesystem=host"
  ],
  "cleanup": [ "/lib/cmake" ],
  "modules": [
    {
      "name": "scons",
      "cleanup": [ "*" ],
      "buildsystem": "simple",
      "build-commands": [
        "python3 setup.py install --prefix=/app",
        "sed -i '1 s/python/python3/' /app/bin/scons"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://prdownloads.sourceforge.net/scons/scons-3.1.2.tar.gz",
          "sha256": "7801f3f62f654528e272df780be10c0e9337e897650b62ddcee9f39fde13f8fb",
          "x-checker-data": {
              "type": "anitya",
              "project-id": 4770,
              "url-template": "http://prdownloads.sourceforge.net/scons/scons-$version.tar.gz"
        }
        }
      ]
    },
    {
        "name": "glfw",
        "buildsystem": "cmake-ninja",
        "builddir": true,
        "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
            "-DBUILD_SHARED_LIBS:BOOL=ON"
        ],
        "sources": [
            {
                "type": "archive",
                "url": "https://github.com/glfw/glfw/releases/download/3.3.4/glfw-3.3.4.zip",
                "sha256": "bbd2c42c660b725e9755eb417e40b373f0d4c03138c9b2e210d02cd308bd99cd",
                "x-checker-data": {
                    "type": "anitya",
                    "project-id": 1180,
                    "url-template": "https://github.com/glfw/glfw/releases/download/$version/glfw-$version.zip"
            }
            }
        ],
        "cleanup": [
            "/include",
            "/lib/pkgconfig"
        ]
    },
    {
      "name": "goxel",
      "no-autogen": true,
      "make-args": ["release"],
      "make-install-args": ["PREFIX=/app"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/guillaumechereau/goxel/archive/v0.10.8.tar.gz",
          "sha256": "98def0a77e90306023951b8171bf93458ef58663f1eca71201ed93b8fcdf332a",
          "x-checker-data": {
              "type": "anitya",
              "project-id": 12163,
              "url-template": "https://github.com/guillaumechereau/goxel/archive/v$version.tar.gz"
        }
        },
        {
          "type": "file",
          "path": "io.github.guillaumechereau.Goxel.appdata.xml",
          "dest": "snap/gui/",
          "dest-filename": "io.github.guillaumechereau.Goxel.appdata.xml"
        }
      ]
    }
  ]
}
